let g:plugin_loader_roots = "~/dotfiles/.vimperator/vimperator-plugins"
let g:plugin_loader_plugins = "_libly,lookupDictionary,copy"

" スクロールの端などの際に出るbeepをoff
set nobeep
" 検索で大文字小文字を無視
set ignorecase
" GUI(全て非表示)
set gui=
" 自動入力欄フォーカスを無効化
set focuscontent
" hint用設定 キーボード中段のみを使う
set hintchars=lsjdkfgh

" カラースキーマ
colorscheme dita

set complete=sl
" 履歴を1000件
set history=1000
" ステータスライン
set status=input, location,position
" 検索で大文字小文字を無視
set ignorecase
set popups=tab

